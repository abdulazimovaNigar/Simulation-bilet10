@model Product
<form asp-area="Admin" asp-controller="Product" asp-action="Create">
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" placeholder="Enter Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" placeholder="Enter Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image">Image</label>
        <input asp-for="Image" placeholder="Enter Image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" placeholder="Enter Price">
        <span asp-validation-for="Price"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReviewAmount">ReviewAmount</label>
        <input asp-for="ReviewAmount" placeholder="Enter ReviewAmount">
       <span asp-validation-for="ReviewAmount"></span>
    </div>
    <input class="btn btn-primary" type="submit" value="Submit">
</form>